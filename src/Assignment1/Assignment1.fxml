<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Assignment1.Controller" style="-fx-background-color: lightGrey">
    <TableView fx:id="table" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-background-color: beige; -fx-font: 15px GeorgiaProCondBlack">
        <columns>
            <TableColumn fx:id="FileName" prefWidth="150" text="File" style="-fx-background-color: pink"/>
            <TableColumn fx:id="ActualClass" prefWidth="150" text="Actual Class" style="-fx-background-color: pink"/>
            <TableColumn fx:id="SpamProbability" prefWidth="150" text="Spam Probability" style="-fx-background-color: pink"/>
        </columns>
    </TableView>

    <Label text="Accuracy: " GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font: 15px GeorgiaProCondBlack"/>
    <TextField fx:id="Accuracy" prefWidth="202.0" scaleX="0.5" translateX="10.0" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-background-color: beige; -fx-font: 15px GeorgiaProCondBlack"/>
    <Label text="Precision: " GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font: 15px GeorgiaProCondBlack"/>
    <TextField fx:id="Precision" scaleX="0.5" translateX="10.0" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-background-color: beige; -fx-font: 15px GeorgiaProCondBlack"/>


    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="7">
        <Button onAction="#test" prefWidth="134.0" text="Test" style="-fx-background-color: lightBlue; -fx-font: 15px GeorgiaProCondBlack"/>
        <Button onAction="#train" prefWidth="134.0" text="Train" style="-fx-background-color: lightBlue; -fx-font: 15px GeorgiaProCondBlack"/>
    </HBox>


</GridPane>
